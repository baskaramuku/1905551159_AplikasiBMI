<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_marginBottom="15px"
        android:gravity="center"
        android:text="HASIL PERHITUNGAN BMI"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="NAMA"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/txtnamadetail"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="NAMA"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="JENIS KELAMIN"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <RadioGroup
        android:id="@+id/rgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rm"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Laki-Laki"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="HOBI"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <CheckBox
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="GYM"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="Lari"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="Sepeda"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tulisantinggidetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="TINGGI (CM)"
        android:layout_marginTop="3px"
        android:layout_marginBottom="3px"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/edittinggi"
        android:max="250"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tulisanberatdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="BERAT (KG)"
        android:layout_marginTop="3px"
        android:layout_marginBottom="3px"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/editberat"
        android:max="250"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:layout_marginBottom="10dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="HASIL"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />
    <TextView
        android:id="@+id/txtketerangandetail"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="hasil"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/btnupdatedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25px"
        android:text="UPDATE"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#185ADB"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/btndeletedetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25px"
        android:text="DELETE"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#E91E1E"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="144dp" />

    <Button
        android:id="@+id/btnkembalidetail"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginLeft="50dp"
        android:text="Kembali"
        android:background="@drawable/button"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#4CAF50"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="144dp" />

</LinearLayout>