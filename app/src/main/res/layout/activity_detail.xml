<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="@string/hasil_perhitungan_bmi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/nama"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/txtnamadetail"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/nama"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/jenis_kelamin"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <RadioGroup
        android:id="@+id/rgg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/rm"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="@string/laki_laki"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perempuan"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/hobi"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <CheckBox
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/gym"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:text="@string/lari"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/sepeda"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tulisantinggidetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/tinggi_cm"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/edittinggi"
        android:max="250"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tulisanberatdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/berat_kg"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/editberat"
        android:max="250"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/hasil"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />
    <TextView
        android:id="@+id/txtketerangandetail"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:text="@string/hasil_1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/btnupdatedetail"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="115dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/update"
        android:background="@drawable/button"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#185ADB"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="144dp"
        android:layout_marginStart="115dp" />

    <Button
        android:id="@+id/btndeletedetail"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="115dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/delete"
        android:background="@drawable/button"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#E91E1E"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="144dp"
        android:layout_marginStart="115dp" />

    <Button
        android:id="@+id/btnkembalidetail"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="115dp"
        android:text="@string/kembali"
        android:background="@drawable/button"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#4CAF50"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="144dp"
        android:layout_marginStart="115dp" />
</LinearLayout>